{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/@types/*",
                "*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "lib": [
        "es2016",
        "dom",
        "es5"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}