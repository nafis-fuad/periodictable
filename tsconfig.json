{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        // "noEmit": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "lib": [
        "es2016",
        "dom",
        "es5"
    ],
}